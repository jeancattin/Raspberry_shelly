[unit]
Description=Shelly Measurement Script
After=network.target

[Service]
ExecStart=/usr/bin/python3 -u /home/pi/Documents/Raspberry_shelly/ShellyCheck_influx.py
WorkingDirectory=/home/pi/Documents/Raspberry_shelly
Restart=always
User=pi
StandardOutput=append:/var/log/shelly_measurement.log
StandardError=append:/var/log/shelly_measurement.error.log

[Install]
WantedBy=multi-user.target

